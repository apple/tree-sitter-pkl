{
  "name": "@apple/tree-sitter-pkl",
  "version": "0.16.0",
  "description": "Pkl grammar for node-tree-sitter",
  "repository": {
    "type": "git",
    "url": "https://github.com/apple/tree-sitter-pkl"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "parser",
    "lexer"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "author": "pkl-oss@group.apple.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/apple/tree-sitter-pkl/issues"
  },
  "engines": {
    "node": "18.17.0",
    "npm": "9.6.0"
  },
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.4.5",
    "node-gyp": "^9.1.0",
    "tree-sitter-cli": "^0.23.0",
    "typescript": "^4.9.0",
    "prebuildify": "^6.0.1"
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "tree-sitter": [
    {
      "scope": "source.pkl",
      "file-types": [
        "pkl",
        "pcf"
      ],
      "first-line-regex": "#!.*\\bpkl$",
      "injection-regex": "pkl"
    }
  ]
}
